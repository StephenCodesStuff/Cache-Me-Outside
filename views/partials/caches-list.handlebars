<section id="portfolio" class="portfolio sections-bg">
    <div class="container" data-aos="fade-up">

        <div class="section-header">
            <h2>All Caches</h2>
            <p>Every cache currently hidden in our database. Which one will you find first?</p>
        </div>

        <div class="portfolio-isotope" data-portfolio-filter="*" data-portfolio-layout="masonry"
            data-portfolio-sort="original-order" data-aos="fade-up" data-aos-delay="100">
            <div id="big-map"></div>
            <div class="scrollable m-4">
            <div class="row gy-4 portfolio-container">
                
                
                {{#each caches as |cache|}}

                <div class="col-xl-4 col-md-6 portfolio-item filter-app">
                    <div class="portfolio-wrap">
                        <div class="portfolio-info" onclick="zoomMap({{lat}},{{lon}})">
                            <h4><a href="/cache/{{id}}" title="More Details">{{name}}</a></h4>
                            <p><a>Location: {{lat}}, {{lon}}</a></p>
                            <p>Difficulty: {{difficulty}}</p>
                            <p>Hidden by: {{user.username}}</p>
                            <a href="/cache/{{id}}">More Details</a>
                        </div>
                    </div>
                </div>

                {{/each}}
                
            </div>
            </div>
        </div><!-- End Portfolio Container -->

    </div>

    </div>
     <script src="/assets/js/cacheListMap.js"></script>
</section>

